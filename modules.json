{
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch workspace r-1",
    "on-scroll-down": "hyprctl dispatch workspace r+1",
    "on-click": "activate",
    "active-only": false,
    "all-outputs": true,
    "format": "{}",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": ""
    },
    "persistent-workspaces": {
      "*": 5
    }
  },
  "custom/updates": {
    "format": " {}",
    "escape": true,
    "return-type": "json",
    "exec": "update-check",
    "interval": 1800,
    "signal": 1,
    "hide-empty-text": true,
    "on-click": "ghostty --class=local.floating -e update-perform"
  },
  "custom/hypridle": {
    "format": "",
    "return-type": "json",
    "escape": true,
    "exec-on-event": true,
    "interval": 60,
    "exec": "hypridle-toggle status",
    "on-click": "hypridle-toggle toggle"
  },
  "custom/music": {
    "format": "  {}",
    "escape": true,
    "interval": 5,
    "tooltip": false,
    "exec": "playerctl -p spotify metadata --format='{{ title }} - {{ artist }}' 2>/dev/null || echo ''",
    "on-click": "playerctl -p spotify play-pause",
    "max-length": 70
  },
  "clock": {
    "format": "{:L%a %H:%M}",
    "format-alt": "{:L%d de %b}",
    "tooltip": false,
    "format-caps": "uppercase",
//    "format-localized": true
  },
  "cpu": {
    "interval": 5,
    "format": "",
    "on-click": "ghostty -e btop"
  },
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon}",
    "on-click": "ghostty --class=local.wiremix -e wiremix",
    "on-click-right": "pamixer -t",
    "tooltip-format": "Volume {volume}%",
    "format-muted": "",
    "format-icons": {
      "default": [
        "",
        "",
        " "
      ]
    }
  },
  "network": {
    "format-icons": [
      "󰤯",
      "󰤟",
      "󰤢",
      "󰤥",
      "󰤨"
    ],
    "format": "{icon}",
    "format-wifi": "{icon}",
    "format-ethernet": "󰀂",
    "format-disconnected": "󰤮",
    "tooltip-format-wifi": "{essid} ({frequency} GHz)\n⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-ethernet": "⇣{bandwidthDownBytes}  ⇡{bandwidthUpBytes}",
    "tooltip-format-disconnected": "Desconectado",
    "interval": 3,
    "spacing": 1,
    "on-click": "ghostty --class=local.floating -e impala"
  },
  "battery": {
    "format": "{capacity}% {icon}",
    "format-discharging": "{icon}",
    "format-charging": "{icon}",
    "format-plugged": "",
    "format-icons": {
      "charging": [
        "󰢜",
        "󰂆",
        "󰂇",
        "󰂈",
        "󰢝",
        "󰂉",
        "󰢞",
        "󰂊",
        "󰂋",
        "󰂅"
      ],
      "default": [
        "󰁺",
        "󰁻",
        "󰁼",
        "󰁽",
        "󰁾",
        "󰁿",
        "󰂀",
        "󰂁",
        "󰂂",
        "󰁹"
      ]
    },
    "format-full": "󰂅",
    "tooltip-format-discharging": "{power:>1.0f}W↓ {capacity}%",
    "tooltip-format-charging": "{power:>1.0f}W↑ {capacity}%",
    "interval": 5,
    "on-click": "walker -t menus -m menus:power-profiles -N -n",
    "states": {
      "warning": 20,
      "critical": 10
    }
  },
  "bluetooth": {
    "format": "",
    "format-disabled": "󰂲",
    "format-connected": "",
    "tooltip-format": "Devices connected: {num_connections}",
    "on-click": "ghostty --class=local.bluetui -e bluetui"
  },
  "custom/brightness": {
    "format": "",
    "on-click": "walker -t menus -m menus:brightness --maxheight 350 --minwidth 50 -N"
  },
  "custom/spotify": {
    "format": "",
    "on-click": "spotify",
    "tooltip-format": "Abrir o Spotify"
  },
  "custom/screenrecord": {
    "exec": "screenrecord-status",
    "return-type": "json",
    "signal": 8,
    "interval": 1,
    "on-click": "screenrecord output"
  }
}
